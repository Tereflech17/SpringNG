<body>
	<nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top mb-1">
		<div class="container-fluid">
			<a class="navbar-brand" href="/">SprinNG</a>
			<form class="form-inline my-2 my-lg-0">
				<input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
				<button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
			  </form>
			<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria- controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>
			
			<div class="collapse navbar-collapse" id="navbarSupportedContent">
				
				<div class="navbar-center ml-auto">
					<ul class="navbar-nav ml-auto">
						<% if (!currentUser) { %>
						<li class="nav-item">
							<a class="nav-link" href="/login">Login</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="/signup">Sign Up</a>
						</li>
						<% }
						 else if(currentUser) { %>
						<li class="nav-item nav-item-user">
							<div class="user-avatar">
								<span class="user-avatar-initials">
									<a class="nav-link c-text"><%= currentUser.firstName.charAt(0).		toUpperCase(); %><%= currentUser.lastName.charAt(0).toUpperCase(); %> 
									</a>
								</span>
							</div>
								<span class="user-name">
									<a class="nav-link" href=""><%= currentUser.firstName %></a>
								</span>	
						</li>
						<li class="nav-item dropdown nav-item-dropdown">
							<a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
								<i class="fa-solid fa-gear"></i>
							</a>
							<div class="dropdown-menu" aria-labelledby="navbarDropdown">
							  <h6 class="dropdown-item dropdown-title">account</h6>
							  <a class="dropdown-item username" href="#"><%= currentUser.username %></a>
							  <a class="dropdown-item" href="/author/myprofile">view profile â†’</a>
							  <div class="dropdown-divider"></div>
							  <h6 class="dropdown-item dropdown-title">account settings</h6>
							  <a class="dropdown-item" href="#">Password Reset</a>
							  <div class="dropdown-divider"></div>
							  <a class="dropdown-item" href="/logout">Sign out</a>
							</div>
						  </li>
						  <% } %>
					</ul>
				</div>
			</div>
		</div>	
	</nav>
	<div class="container">
		<div class="flash-message u-mt-big">
			<!-- <% if(error && error.length){ %> -->
				<div class="message-container message-error alert alert-danger c-text" role="alert">
				<p class=" error-text"><%= error %></p>
			</div>
		<!-- <% } %> -->
		<% if(success && success.length) { %>
				<div class="message-container message-success alert alert-success c-text" role="alert">
				<p class="success-text"><%= success %></p>
				</div>
		   
		<% } %>
		</div>
	</div>
	
	