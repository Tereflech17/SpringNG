<%- include ("../partials/header") %>
<div class="container u-mt-big">
    <form action="/author/book/" method="POST">
        <div class="form-card" data-step>
            <h3 class="title">Add Book</h3>
            <div class="form-group">
              <input type="text" name="book[bookTitle]" class="form-control" placeholder="Title">
            </div>
            <div class="form-group">
              <input type="text" name="book[category]" class="form-control" placeholder="Category">
            </div>
            <div class="form-group">
              <textarea name="book[bookDescription]" id="" cols="30" rows="10" class="form-control" placeholder="Description"></textarea>
            </div>
           
            <div class="form-btn">
              <button class="btn btn-dark-green-2" type="submit" data-previous>Save</button>
            </div>
          
          </div>
    </form>
</div>

