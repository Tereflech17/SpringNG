<%- include ("../partials/header") %>
<div class="container u-mt-big">
    <form action="/author/book/details/<%= book.id %>?_method=PUT" method="POST">
        <div class="form-card" data-step>
            <h3 class="title">Edit Book</h3>
            <div class="form-group">
              <input type="text" name="book[bookTitle]" class="form-control" placeholder="Title" value="<%= book.bookTitle %>">
            </div>
            <div class="form-group">
              <input type="text" name="book[category]" class="form-control" placeholder="Category" value="<%= book.category %>">
            </div>
            <div class="form-group">
              <textarea name="book[bookDescription]" id="" cols="30" rows="10" class="form-control" placeholder="Description"><%= book.bookDescription %></textarea>
            </div>
           
            <div class="form-btn">
              <button type="submit">Save</button>
            </div>
          </div>
    </form>
    <form action="/author/book/details/<%= book.id %>?_method=DELETE" method="POST">
        <div class="form-btn">
            <button type="submit">Delete book</button>
          </div>
    </form>
</div>