<%- include ("../partials/header") %>
<div class="container u-mt-rm">
    <div class="form-heading">
        <h1 class="form-title c-text u-mb-sm">Reset Password</h1>
    </div>
    <form action="/reset/<%= token %>?_method=PUT" method="POST" class="reset-form">
        <div class="form-group">
            <input type="password" name="password" placeholder="New password" class="form-control" autofocus>
        </div>
        <div class="form-group">
            <input type="password" name="confirm-password" placeholder="Retype password" class="form-control">
        </div>
        <div class="form-group">
            <button type="submit" class="my-btn btn-w btn-dark-green-2">Submit</button>
        </div>
    </form>
</div>
