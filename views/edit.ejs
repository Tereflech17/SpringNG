<%- include ("./partials/header") %>
<div class="container">
    <div class="u-mt-rm">
        <form class="" action="/author/myprofile/<%= authorProfile.id %>?_method=PUT" method="POST">
            <div class="form-card profile">
                <h3 class="edit-card-title">Edit Profile</h3>
              <div class="form-row">
                <div class="form-group col-md-6">
                    <!-- <label for="email">Email</label> -->
                    <input type="text" name="user[firstName]" class="form-control" placeholder="First Name" value="<%= userProfile.firstName %>">
                  </div>
                  <div class="form-group col-md-6">
                    <input type="text" name="user[lastName]" class="form-control" placeholder="Last Name" value="<%= userProfile.lastName %>">
                  </div>
              </div>
             <div class="form-row">
                <div class="form-group col-md-6">
                    <input type="text" name="authorProfile[location]" class="form-control" placeholder="Location" value="<%= authorProfile.location %>">
                  </div>
                  <div class="form-group col-md-6">
                    <input type="text" name="authorProfile[website]" class="form-control" placeholder="Personal/Blog Link" value="<%= authorProfile.website %>" >
                  </div>
             </div>
             
              <div class="form-group">
                  <textarea name="authorProfile[biography]" class="form-control" id="" cols="30" rows="10" class="form-control" placeholder="Biography"><%= authorProfile.biography %></textarea>
              </div>
        
                <div class="form-group">
                    <input type="text" name="authorProfile[linkedin]" class="form-control" placeholder="LinkeIn URL" value="<%= authorProfile.linkedin%>">
                </div>
                <div class="form-group">
                    <input type="text" name="authorProfile[twitter]" class="form-control" placeholder="Twitter URL" value="<%= authorProfile.twitter%>">
                </div>
                <div class="form-group">
                <input type="text" name="authorProfile[instagram]" class="form-control" placeholder="Instagram URL" value="<%= authorProfile.instagram%>">
                </div>
                <div class="form-btn">
                    <button class="my-btn btn-sr btn-dark-green-2" type="submit">Save</button>
                  </div>
            </div>
          </form>
    </div>
</div>
